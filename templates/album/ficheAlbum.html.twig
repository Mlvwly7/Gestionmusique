{% extends 'base.html.twig' %}

{% block title %}Fiche album{% endblock %}

{% block body %}
        <h1 class="pt-2 text-center">Fiche de l'album</h1>
        <hr>
        <div class="row pt-2">
            {% set nbAlbums = leAlbum.morceaux|length %}
                <div class="card mb-3">
                    <h3 class="card-header"> <a href="{{path('ficheAlbum', {'id': leAlbum.id})}} ">{{leAlbum.nom}}</h3>
                    <div class="row">
                        <div class="col-3 d-flex align-item-center mx-auto"></div>
                            <img class="avatar mx-auto d-block " style ="height: auto; width: 200px; display: block; " src="{{leAlbum.image}}" >
                        </div>
                        <div class="col"></div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="" class="badge badge-success"> {{leAlbum.nom}} </a>
                            </h5>
                        </div>
                            <p class="card-text"> {{leAlbum.date}} </p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                {% for style in leAlbum.styles %}
                                <span class="badge" style="background-color: {{style.couleur}};"> 
                                    {{style.nom}} 
                                </span>
                                {% endfor %} 
                            </li>
                            <li class="list-group-item">
                                {{nbAlbums}}
                                {% if nbAlbums>1 %} 
                                    morceaux 
                                {% else %} 
                                    morceau
                                {% endif %}
                        
                        
                        
                        
                        </ul>
                    </div>


                    <div class="card-body">
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                    <div class="card-footer text-muted">
                        2 days ago
                    </div>
                </div>
        </div>

<table class="table table-hover mx-auto">
  <thead>
    <tr>
      <th scope="col-3">Piste</th>
      <th scope="col-4">Titre</th>
      <th scope="col-1">Dur√©e</th>
      <th scope="col-3">note</th>
    </tr>
  </thead>
  <tbody>
  {% for leMorceau in leAlbum.morceaux %}
          <tr>
              {# <td scope="row"> {{leMorceau.piste}} </td> #}
              <td>{{leMorceau.titre}}</td>
              <td>{{leMorceau.duree}}</td>
          </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}
